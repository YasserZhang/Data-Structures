{
  "compileOnSave": false,
  "compilerOptions": {
      "rootDir": "src",
      "sourceMap": true,
      "target": "es6",
      "module": "amd",
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "lib": ["es2015", "dom"],
      "baseUrl": "./",
      "typeRoots": [
          "node_modules/@types"
      ],
      "types": [
          "node"
      ],
      "paths": {
          "src/*": ["src/*"]
      }
  },
  "exclude": [
      "node_modules",
      "dist",
      "build"
  ],
  "filesGlob": [
      "./src/**/*.ts",
      "./test/**/*.ts",
      "./node_modules/@types/**/*.d.ts"
  ],
  "atom": {
      "rewriteTsconfig": false
  }
  }